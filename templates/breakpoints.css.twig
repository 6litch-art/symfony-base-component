{% cache "breakpoints_"~(breakpoints|map(b => "#{b.name}")|join('_')) %}
body:before {
    display: none;
    visibility: hidden;
}

{%- for breakpoint in breakpoints -%}
@media {{ (breakpoint.media ?? "all")|raw }} {
    body:before {
        content: "{{ breakpoint.name|raw}}";
    }
}
{%- endfor -%}
{% endcache %}