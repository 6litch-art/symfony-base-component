<div class="locale-text">
    <span class="label">{{ "@localizer.lang._singular"|trans }}</span>
    <ul class="locale">
    {% for locale in available_locales %}
        {% set current = (locale == current_locale) ? "active" : null %}
        <li><a href="{{ path("_switch_locale", {_locale: locale|lang}) }}" {{ html_attributes({"class":current}) }}>{{ locale|country }} | {{ locale|lang_name|capitalize}}</a></li>
    {% endfor %}
    </ul>
</div>