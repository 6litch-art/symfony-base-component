{% extends 'email.html.twig' %}

{% block subject %}
    {{ '@emails.thread.publish.subject'|trans([(thread|trans_entity), thread.title])|raw }}
{% endblock %}

{% block content %}
    {{ '@emails.thread.publish.content'|trans([(thread|trans_entity), thread.excerpt ?? (thread.content|str_shorten)])|raw }}
{% endblock %}

{% block action_text %}
    {{ '@emails.thread.publish.action_text'|trans([(thread|trans_entity)]) | raw }}
{% endblock %}

{% block action_url %}
    {{ thread|linkify }}
{% endblock %}