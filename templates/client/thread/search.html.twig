{% extends 'layout.html.twig' %}

{% block title %}Search for a thread{% endblock %}
{% block main %}
    <article class="wrapper">

        {{ form_start(form, {'attr': {'class': "form-inline"}}) }}

            <div class="d-flex justify-content-center flex-row flex-wrap">
                <h1 class="me-3">{{ '@messages.search.title'|trans }}</h1>
                <div class="input-group w-auto me-3">
                    <div class="form-outline">
                        {{ form_widget(form.generic, {'attr': {'placeholder': '@messages.search.placeholder'|trans}, value: form.vars.value.generic }) }}
                    </div>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search"></i>
                    </button>
                </div>

                <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                    <i class="fas fa-plus-circle"></i>
                </button>
            </div>

            <div class="collapse" id="collapseExample">
            <p>
                <div class="card card-body">
                <div class="d-flex justify-content-center align-items-center flex-row flex-wrap">
                    <div class="input-group w-auto m-1">
                        {{ form_widget(form.title  , {'attr': {'placeholder': '@controllers.thread_search.title'|trans}, value: form.vars.value.title|trim("%") }) }}
                    </div> ou
                    <div class="input-group w-auto m-1">
                        {{ form_widget(form.excerpt, {'attr': {'placeholder': '@controllers.thread_search.excerpt'|trans}, value: form.vars.value.excerpt|trim("%") }) }}
                    </div> ou
                    <div class="input-group w-auto m-1">
                        {{ form_widget(form.content, {'attr': {'placeholder': '@controllers.thread_search.content'|trans}, value: form.vars.value.content|trim("%") }) }}
                    </div>
                </div>
                </div>
            </p>
            </div>
        {{ form_end(form) }}

    </article>

    {% if threads|length %}

        {% set lastSection = null %}
        {% for thread in threads %}

            {% set depth = thread.getRepository().getHierarchyDepth() %}

            {% if lastSection != thread.getRepository().getHierarchy() %}
                <article>
                <div class="headline">
                    {% for section in thread.getRepository().getHierarchyTree() %}
                    > {{ section|capitalize }}
                    {% endfor %}
                </div>
                </article>
                {% set lastSection = thread.getRepository().getHierarchy() %}
            {% endif %}

            <article class="wrapper">
                <div class="header">

                    <ul class="field-avatar">
                        {% for owner in thread.owners|reverse %}
                        <li>{{ owner.getFormattedAvatar()|raw }}</li>
                        {% endfor %}
                    </ul>

                    <div class="text">

                        <h1 class="title">
                            {% set threadTitle = thread.title | highlight(form_data.title, -1) | default(thread.title) %}
                            {% if depth > 1 and thread.parent() != null %}
                                {{ '@entities.thread.in'|trans([threadTitle, thread.parent().title]) | raw }}
                            {% else %}
                                {{ threadTitle |raw }}
                            {% endif %}
                        </h1>

                        <div class="info">

                            {{ '@messages.blog.article.date'|trans([
                                thread.publishedAt()|datetime("dd MMMM YYYY"),
                                thread.publishedAt()|datetime("HH:mm")
                            ])|raw }}&nbsp

                            {% if thread.owners|length > 2 %}
                            <br/>
                            {% endif %}

                            {{ '@messages.blog.article.by'|trans }}
                            {% for owner in thread.owners %}
                                    {% if not loop.first %}
                                    {% if loop.last %} {{ '@messages.blog.article.and'|trans }} {% else %}, {% endif %}
                                    {% endif %}
                                    <a href="/profile/{{ owner.username|lower }}">{{ owner.username }}</a>
                            {% endfor %}
                        </div>
                    </div>
                </div>

                {% if thread.excerpt %}
                <hr>
                <p>{{ thread.excerpt | highlight(form_data.excerpt, -1) |default(thread.excerpt) | raw }}</p>
                {% endif %}

                {% if thread.content %}
                <hr>
                <p>{{ thread.content | highlight(form_data.content, 5) | raw }}</p>
                {% endif %}

                {# <p>
                <div class="d-flex justify-content-end">
                    <a href="{{ thread.getPath() }}" class="btn btn-primary">
                        {{ ('@entities.'~get_short_class(thread)~'.see') | trans }}
                    </a>
                </div>
                </p> #}
            </article>
        {% endfor %}
    {% endif %}

{% endblock %}
