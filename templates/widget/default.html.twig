{% extends 'layout.html.twig' %}
{% block content %}
<div class="page wrapper">

    <h1 class="page-title">{{widget.title}}</h1>
    <h3>{{widget.excerpt}}</h3>

    {% set referer = app.request.server.get('http-referer')|default(asset('')) %}
    <div class="page-referer">{{ '@messages.base.return'|trans([referer])|raw }}<p>
</div>
{% endblock %}
