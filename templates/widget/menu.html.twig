<div class="widget-menu">
    {% if label != false %}<span class="label">{{ label }}</span>{% endif %}
    <ul class="items">
        {% for item in widget.widgets %}
            {% set url = item.__toUrl() %}
            {% if url is not empty %} 
                <li><a href="{{ item.__toUrl() }}" class="{{ class|default(null) }}">{{item|raw}}</a></li>
            {% endif %}
        {% endfor %}
        
        {% if tail is defined %}
            {% for item in tail %}<li>{{ item }}</li>{% endfor %}
        {% endif %}
    </ul>
</div>