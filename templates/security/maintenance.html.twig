{% extends 'layout1.html.twig' %}

{% block content %}
    <div class="container text-center">
        <h2>{{ '@controllers.security_maintenance.title' | trans }}</h2><br/>
        <p>
            {{ '@controllers.security_maintenance.description' | trans({
                downtime,
                0:downtime|datetime("EEEE dd MMMM YYYY"),
                1:downtime|datetime("hh:mm:ss")
                })
            }}

            {% if remainingTime > 0 %} <br/> {% endif %}
            {{ '@controllers.maintenance.estimate' | trans({
                    uptime,
                    0: '@controllers.security_maintenance.days'|trans([remainingTime|date("d")]),
                    1: '@controllers.security_maintenance.hours'|trans([remainingTime|date("H")]),
                    2: '@controllers.security_maintenance.minutes'|trans([remainingTime|date("i")])
                })
            }}

        </p>

        {% if percentage >= 0 %}
        <br />
        <div class="progress"style="height: 25px;">
            <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar"
                style="width:{{percentage}}%;">
            </div>
        </div><br/>
        <h4>{{ '@controllers.security_maintenance.progress' | trans([percentage]) }}</h4>
        {% endif %}
    </div>

{% endblock %}