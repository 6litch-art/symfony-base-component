{% extends 'layout1.html.twig' %}

{% block title %}{{'@forms.resetPassword.title'|trans}}{% endblock %}

{% block contentNoWrap %}
<article class="wrapper">
<div class="card">
    <div class="card-header">
        <h3 class="text-center">{{'@forms.resetPassword.title'|trans}}</h3>
    </div>
    <div class="card-body" >
        {{ form_start(form) }}

        <p>{{ '@forms.resetPassword.description'|trans }}</p><hr>
        <div class="input-group form-group mb-2">
            <div class="input-group-prepend">
                <span class="input-group-text"><i class="fa-fw fas fa-lock-open  {{ form.plainPassword.first.vars.required ? "required" : "" }}"></i></span>
            </div>
            {{ form_widget(form.plainPassword.first, {'attr': {'placeholder': '@forms.resetPassword.newPassword'|trans}}) }}
            <div class="input-group-prepend">
                <span class="input-group-text"><i class="fa-fw fas fa-lock {{ form.plainPassword.second.vars.required ? "required" : "" }}"></i></span>
            </div>
            {{ form_widget(form.plainPassword.second, {'attr': {'placeholder': '@forms.resetPassword.newPasswordConfirm'|trans}}) }}
        </div>
        <div class="input-group form-group mb-2">
            <small>{{ form_help(form.plainPassword.first) }}</small>
            <div class="invalid-feedback">{{ form_errors(form.plainPassword.first) }}</div>
        </div>
        
        <div class="col d-flex justify-content-center">
            <button class="btn btn-lg btn-primary" type="submit">{{ '@forms.resetPassword.submit'|trans }}</button>
        </div>
        {{ form_end(form) }}
    </div>

</article>
{% endblock %}

