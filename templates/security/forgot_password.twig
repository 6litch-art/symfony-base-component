{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block content %}
<div class="signin d-flex justify-content-center">
    <div class="card">
        <div class="card-header">
            <h3 class="text-center">Forgot your password ?</h3>
        </div>
        <div class="card-body">
			{{ form_start(requestForm) }}
            <form>
                <div class="input-group form-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fa-fw fas fa-at {{ requestForm.email.vars.required ? "required" : "" }}"></i></span>
                    </div>
                    {{ form_widget(requestForm.email) }}

                    <small>Enter your email address and we we will send you a link to reset your password.</small>
                    <div class="form-error">{{ form_errors(requestForm.email) }}</div>
                </div>

                {{ form_row(requestForm._csrf_token) }}

                <button class="w-100 btn btn-lg btn-primary" type="submit">Send password reset email</button>
            </form>
			{{ form_end(requestForm) }}
        </div>

        <div class="card-footer">
            <div class="text-center">
                Don't have an account?
                <a href="{{ path('base_register') }}">Sign Up</a>
            </div>
            <div class="text-center">
                <a href="{{ path("base_login") }}">Or just sign in!</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
