{% extends 'email.html.twig' %}

{% block subject %}
    {{ '@emails.verifyEmail.subject'|trans|raw }}
{% endblock %}

{% block content %}
    {{ '@emails.verifyEmail.content'|trans|raw }}
{% endblock %}

{% block action_text %}
    {{ '@emails.verifyEmail.action_text'|trans | raw }}
{% endblock %}

{% block action_url %}
    {{ path('security_verifyEmailWithToken', {'token': token.get()}) }}
{% endblock %}

{% block footer_text %}

    {% if token.getLifetime() > 0 and token.getLifetime() < 3600*24*7 %}
        {{ '@emails.verifyEmail.expiry' | trans([token.getLifetime()|trans_time]) | raw }}
    {% endif %}

{% endblock %}
