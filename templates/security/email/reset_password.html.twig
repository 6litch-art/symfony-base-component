{% extends 'email.html.twig' %}


{% block subject %}
    {{ "@emails.resetPassword.subject"|trans|raw }}
{% endblock %}

{% block content %}
    {{ "@emails.resetPassword.content"|trans|raw }}
{% endblock %}

{% block action_text %}
    {{ "@emails.resetPassword.action_text"|trans | raw }}
{% endblock %}

{% block action_url %}
    {{ path("security_resetPasswordWithToken", {"token": token.get()}) }}
{% endblock %}

{% block footer_text %}

    {% if token.getLifetime() > 0 and token.getLifetime() < 3600*24*7 %}
        {{ "@emails.resetPassword.expiry"|trans([token.getRemainingTime()|time])|raw }}
    {% endif %}

{% endblock %}
