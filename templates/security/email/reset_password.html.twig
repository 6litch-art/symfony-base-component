{% extends 'email.html.twig' %}


{% block subject %}
    {{ "emails.resetPassword.subject"|trans2|raw }}
{% endblock %}

{% block content %}
    {{ "emails.resetPassword.content"|trans2|raw }}
{% endblock %}

{% block action_text %}
    {{ "emails.resetPassword.action_text"|trans2 | raw }}
{% endblock %}

{% block action_url %}
    {{ path("base_resetPassword_token", {"token": token.get()}) }}
{% endblock %}

{% block footer_text %}

    {% if token.getExpiry() is not null %}
        {{ "emails.resetPassword.expiry"|trans2([token.getRemainingTime()|time])|raw }}
    {% endif %}

{% endblock %}
