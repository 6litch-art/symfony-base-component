{% extends 'layout.html.twig' %}

{% block title %}{{'forms.resetPassword.title'|trans2}}{% endblock %}

{% block contentNoWrap %}
<article class="wrapper">
<div class="card">
    <div class="card-header">
        <h3 class="text-center">{{'forms.resetPassword.title'|trans2}}</h3>
    </div>
    <div class="card-body" >
        {{ form_start(form) }}

        <input type="hidden" name="_target_path" value="{{ app.request.headers.get('referer') }}"/>
        {{ form_row(form._csrf_token) }}

        <div class="col d-flex justify-content-center">
            <div class="input-group form-group mb-2">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fa-fw fas fa-at"></i></span>
                </div>
                {{ form_widget(form.email, {attr:{placeholder:'forms.resetPassword.email'|trans2}}) }}
            </div>
            <div class="input-group form-group mb-2">
                <small>{{ form_help(form.email) }}</small>
                <div class="invalid-feedback">{{ form_errors(form.email) }}</div>
            </div>
        </div>
        <p>{{ 'forms.resetPassword.descriptionRequest'|trans2 }}</p>
        <hr>
        
        <div class="col d-flex justify-content-center">
            <button class="btn btn-lg btn-primary" type="submit">{{ 'forms.resetPassword.submit'|trans2 }}</button>
        </div>
        {{ form_end(form) }}
    </div>

    <div class="card-footer">
        <div class="text-center">
            {{'forms.login.noAccount'|trans2}}
            <a href="{{ path('base_register') }}">{{'forms.register.submit'|trans2}} ?</a>
        </div>
        <div class="text-center">
            <a href="{{ path("base_login") }}">{{'forms.login.submit'|trans2}} ?</a>
        </div>
    </div>
</article>
{% endblock %}
