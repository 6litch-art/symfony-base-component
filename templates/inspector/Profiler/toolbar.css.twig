{% include "@!WebProfiler/Profiler/toolbar.css.twig" %}

.sf-toolbarreset {
    overflow-x: scroll;
    width: calc(100vw + 1px);
}

.sf-toolbar-block:hover .sf-toolbar-info { position:fixed; }

.sf-toolbarreset .hide-button {
  z-index: 20000;
  top:auto;
  position:fixed;
  color: white;
  background-color:#222;
  height:36px;
}

.sf-toolbar-block-ajax:hover .sf-toolbar-info,
.sf-toolbar-block-ajax.hover .sf-toolbar-info {
    min-width:auto;
    max-width: 500px;
}

.sf-toolbar-ajax-requests th,
.sf-toolbar-ajax-requests td
{ border:0; padding:5px }

.sf-toolbar-block .sf-toolbar-info-piece .sf-toolbar-ajax-requests .sf-toolbar-status { font-size:12px; }

.sf-toolbar-ajax-requests { border:0; }
.sf-toolbar-ajax-requests thead th:first-of-type
{
  border-top-left-radius:6px;
  border-bottom-left-radius:6px;
}
.sf-toolbar-ajax-requests thead th:last-of-type
{
  border-top-right-radius:6px;
  border-bottom-right-radius:6px;
}
.sf-toolbar-block .sf-toolbar-info-piece b,
.sf-toolbar-ajax-requests th,
.sf-toolbar-ajax-requests td
{
  font-size:13px;
}

.sf-ajax-request-url { max-width:75%; }
.sf-toolbarreset {

  height: 36px;
  align-items: flex-end;
  background-color: transparent;
}

.sf-toolbar-block { background-color: #222; }
.sf-toolbar {
  z-index: 9999999;
  height: auto;
  position: fixed;
  bottom: 0;
}

.sf-toolbar-block-gtm.sf-toolbar-status-normal svg path,
.sf-toolbar-block-gtm.sf-toolbar-status-normal svg circle,
.sf-toolbar-block-gtm.sf-toolbar-status-normal svg .sf-svg-path,
.sf-toolbar-block-gtm.sf-toolbar-status-normal svg .sf-svg-circle
{ fill: #AAA; }
.sf-toolbar-block-gtm.sf-toolbar-status-green svg path,
.sf-toolbar-block-gtm.sf-toolbar-status-green svg circle,
.sf-toolbar-block-gtm.sf-toolbar-status-green svg .sf-svg-path,
.sf-toolbar-block-gtm.sf-toolbar-status-green svg .sf-svg-circle,
.sf-toolbar-block-gtm.sf-toolbar-status-red svg path,
.sf-toolbar-block-gtm.sf-toolbar-status-red svg circle,
.sf-toolbar-block-gtm.sf-toolbar-status-red svg .sf-svg-path,
.sf-toolbar-block-gtm.sf-toolbar-status-red svg .sf-svg-circle,
.sf-toolbar-block-gtm.sf-toolbar-status-yellow svg path,
.sf-toolbar-block-gtm.sf-toolbar-status-yellow svg circle,
.sf-toolbar-block-gtm.sf-toolbar-status-yellow svg .sf-svg-path,
.sf-toolbar-block-gtm.sf-toolbar-status-yellow svg .sf-svg-circle { fill: #FFF; }

@keyframes fadeIn {
  0% { opacity: 0; }
  50% { opacity: 0; }
  100% { opacity: 1; }
}

.__TAG_ASSISTANT_BADGE {
  animation: fadeIn 2s ease;
  transition: width 0.5s 2s ease;
}

.sf-toolbar-block-gtm .icon
{
  direction: ltr;
  display: inline-block;
  font-family: Material Icons Extended;
  font-size: 24px;
  font-style: normal;
  font-weight: 400;
  height: 40px;
  letter-spacing: normal;
  line-height: 40px;
  text-align: center;
  text-transform: none;
  vertical-align: middle;
  white-space: nowrap;
  width: 40px;
  word-wrap: normal;
  -webkit-font-smoothing: antialiased;
  text-rendering: optimizeLegibility;
  -moz-osx-font-smoothing: grayscale;
  -webkit-font-feature-settings: "liga";
  -moz-font-feature-settings: "liga";
  font-feature-settings: "liga";
}

.sf-toolbar-block .sf-toolbar-info-piece b { text-align: right; }

.sf-toolbar-block .sf-toolbar-icon:empty { padding:0; }
.sf-toolbar-block-gtm .sf-toolbar-info-piece { display:flex; }
.sf-toolbar-block-gtm .btn
{
  font-size: 10pt !important;
  color: white;
  font-weight: 500;
  text-decoration: underline;
}

.btn.btn--neutral
{
  background-color: var(--button-bg);
  border: 0;
  box-shadow: var(--button-shadow);
  color: var(--button-color);
  cursor: pointer;
  text-decoration: none;
  transition: box-shadow .2s;
  white-space: nowrap;
}

.sf-toolbar-block .sf-toolbar-info { bottom:35px; }
.sf-toolbar-block-gtm .sf-toolbar-info-block > * { padding:0 0.5em; }
.sf-toolbar-block-gtm .sf-toolbar-info-block
{
  display: flex;
  flex-direction: row;
  align-items: center;
  white-space: normal;
  max-width:300px;
  margin: 0.5em 0.25em;
}

div.sf-toolbar .sf-toolbar-info-group:first-child { margin-bottom:0.5em; }
div.sf-toolbar .sf-toolbar-info-group:first-child .sf-toolbar-info-piece { display:table-row !important;  border-bottom: solid transparent 6px; }
div.sf-toolbar .sf-toolbar-block .sf-toolbar-info-piece a { padding:0 0.25em; }

.sf-toolbar-block-gtm .sf-toolbar-info-inline
{
  display: flex;
  justify-content: space-between;
}

.sf-toolbar-block-right .sf-toolbar-info {
  border-radius: 4px;
  border-bottom-right-radius: 0;
}

.sf-toolbar-block-right {
  flex-grow: 2;
  display: flex;
  justify-content: flex-end;
}

.sf-toolbar-block .sf-toolbar-icon,
.sf-toolbar-block-config .sf-toolbar-icon .sf-toolbar-label {
  display: flex;
  justify-content: center;
  align-items: center;
}

.sf-toolbar-block-time .sf-toolbar-icon { padding: 0 7.5px 0 7.5px; }
.sf-toolbar-block .sf-toolbar-icon > .sf-toolbar-value,
.sf-toolbar-block .sf-toolbar-icon .sf-toolbar-label { padding: 0 2px; }

.sf-toolbar-block { max-width:100%; }
.sf-toolbar-block .sf-toolbar-icon img,
.sf-toolbar-block .sf-toolbar-icon svg
{
    top:0;
    min-height: 20px;
    min-width: 20px;
}

@media all and (max-width: 1024px)
{
  .sf-toolbar-block .sf-toolbar-icon img, .sf-toolbar-block .sf-toolbar-icon svg{
      min-height: 25px;
      min-width: 25px;
  }
}

.sf-minitoolbar
{
  height:auto;
  border-top-left-radius: 1em;
  box-shadow: 0px 0px 3px #0008;
  color:inherit;
}

.sf-minitoolbar button
{
  height:auto;
  cursor: pointer;
}