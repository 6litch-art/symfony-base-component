<div class="locale-dropdown dropdown">
    <button class="btn dropdown-toggle" type="button" id="dropdown-locale" data-bs-toggle="dropdown" aria-expanded="false">
        <i class="fa fa-globe"></i> {{ "@messages.locale.lang._singular"|trans }}
    </button>
    <ul class="dropdown-menu {{ class|default("") }}" aria-labelledby="dropdown-locale">
    {% for locale in available_locales %}
        {% set current = (locale == current_locale) ? "active" : null %}
        <li><a href="{{ path(switch_route, {_locale: locale|lang}) }}" {{ html_attributes({"class": "dropdown-item "~current}) }}>
            <img class="country-flag" src="{{asset('bundles/base/images/flags/'~(locale|country)~'.svg')}}"> {{ locale|lang_name|capitalize }}
        </a></li>
    {% endfor %}
    </ul>
</div>

