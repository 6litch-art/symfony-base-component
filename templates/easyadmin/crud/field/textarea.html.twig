{# @var ea \EasyCorp\Bundle\EasyAdminBundle\Context\AdminContext #}
{# @var field \EasyCorp\Bundle\EasyAdminBundle\Dto\FieldDto #}
{# @var entity \EasyCorp\Bundle\EasyAdminBundle\Dto\EntityDto #}
{% set render_as_html = field.customOptions.get('renderAsHtml') %}
{% set render_as_boolean = field.customOptions.get('renderAsBoolean') %}
{% if ea.crud.currentAction == 'detail' %}
    <span title="{{ field.value }}">
        {{ render_as_html ? field.formattedValue|raw|nl2br : field.formattedValue|nl2br }}
    </span>
{% elseif render_as_boolean %}
    <div class="form-check field-boolean">
        <span class="badge {{ field.value == true ? 'badge-boolean-true' : 'badge-boolean-false' }}">
            {{ (field.value == true ? '@EasyAdminBundle.label.true' : '@EasyAdminBundle.label.false')|trans }}
        </span>
    </div>
{% else %}
    <span title="{{ field.value }}">
        {{ render_as_html ? field.formattedValue|raw : field.formattedValue|striptags }}
    </span>
{% endif %}
