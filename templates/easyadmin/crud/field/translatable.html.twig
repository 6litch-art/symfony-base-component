{# @var ea \EasyCorp\Bundle\EasyAdminBundle\Context\AdminContext #}
{# @var field \EasyCorp\Bundle\EasyAdminBundle\Dto\FieldDto #}
{# @var entity \EasyCorp\Bundle\EasyAdminBundle\Dto\EntityDto #}
{% if field.formattedValue is iterable %}
   <span class="badge badge-secondary">{{ field.formattedValue|length }}</span>
{% elseif field.formattedValue is not null %}

   {% if ea.crud.currentAction == 'detail' %}
      <span>{{ field.formattedValue|raw|nl2br }}</span>
   {% else %}
      <span>{{ field.formattedValue|raw }}</span>
   {% endif %}

{% else %}
   -
{% endif %}