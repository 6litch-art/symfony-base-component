{# @var ea \EasyCorp\Bundle\EasyAdminBundle\Context\AdminContext #}
{# @var field \EasyCorp\Bundle\EasyAdminBundle\Dto\FieldDto #}
{# @var entity \EasyCorp\Bundle\EasyAdminBundle\Dto\EntityDto #}

{% set show = field.customOptions.get('show') %}
{% set showFirst = field.customOptions.get('showFirst') %}
{% set renderAsCount = field.customOptions.get('renderAsCount') %}

{% if field.value is iterable %}

    {% set formattedValues = field.formattedValue %}
    {% set hasEntries = formattedValues|length > 0 %}

    {% if showFirst %}

        {% if hasEntries %}
        {% set fieldValue = formattedValues|first %}
        <span class="badge badge-secondary">
            {% if showFirst == 1 %}
                {{fieldValue.text|default("-")}}  
            {% elseif showFirst == 2 %}
                <div data-toggle="tooltip" data-placement="top" title="{{ fieldValue.text }}">
                {{fieldValue.icon|fontAwesome({class:"fa-fw"})
                                 |default(fieldValue.icon|imagify)|default("") | raw}}
                </div>
            {% else %}
                {{fieldValue.text|default("-")}} | 
                {{fieldValue.icon|fontAwesome({class:"fa-fw"})
                                 |default(fieldValue.icon|imagify)|default("") | raw}}
            {% endif %}
        </span>

        {% set formattedValues = formattedValues|slice(1) %}
        {% endif %}

    {% endif %}

    {% if renderAsCount %}

        {% set sign = showFirst ? "+" : "" %}
        {%- if formattedValues|length -%}
            {%- set names = formattedValues|map(f => "#{f.text}") -%}
            <span class="badge badge-secondary" data-toggle="tooltip" data-placement="top" title="{{ names|join(', ') }}">
                {{sign}}{{ names|length }}
            </span>
        {%- elseif not hasEntries -%}
            <span class="badge badge-secondary">0</span>
        {%- endif -%}
        
    {% else %}

        {%- if not hasEntries -%}
            <span class="badge badge-secondary">-</span>
        {% endif %}

        {% for fieldKey,fieldValue in formattedValues %}
        <span class="badge badge-secondary">
            {% if show == 1 %}
                {{fieldValue.text|default("-")}}  
            {% elseif show == 2 %}
                <div data-toggle="tooltip" data-placement="top" title="{{ fieldValue.text }}">
                {{fieldValue.icon|fontAwesome({class:"fa-fw"})
                                 |default(fieldValue.icon|imagify)|default("") | raw}}
                </div>
            {% else %}
                {{fieldValue.text|default("-")}} | 
                {{fieldValue.icon|fontAwesome({class:"fa-fw"})
                                 |default(fieldValue.icon|imagify)|default("") | raw}}
            {% endif %}
        </span>
        {% endfor %}

    {% endif %}

{% else %}

    {% set fieldValue = field.formattedValue %}
    {% set hasEntries = fieldValue is not empty %}

    {% if showFirst %}
    
        {%- if not hasEntries -%}
            <span class="badge badge-secondary">-</span>
        {% endif %}

        <span class="badge badge-secondary">
        {% if showFirst == 1 %}
            {{fieldValue.text|default("-")}}  
        {% elseif showFirst == 2 %}
            <div data-toggle="tooltip" data-placement="top" title="{{ fieldValue.text }}">
            {{fieldValue.icon|fontAwesome({class:"fa-fw"})
                                |default(fieldValue.icon|imagify)|default("") | raw}}
            </div>
        {% else %}
            {{fieldValue.text|default("-")}} | 
            {{fieldValue.icon|fontAwesome({class:"fa-fw"})
                                |default(fieldValue.icon|imagify)|default("") | raw}}
        {% endif %}
        </span>

    {% elseif renderAsCount %}

        {%- if fieldValue is not empty -%}
            <span class="badge badge-secondary" data-toggle="tooltip" data-placement="top" title="{{ fieldValue.text }}">1</span>
        {%- elseif not hasEntries -%}
            <span class="badge badge-secondary">0</span>
        {%- endif -%}
        
    {% else %}

        {%- if not hasEntries -%}
            <span class="badge badge-secondary">-</span>
        {% endif %}

        <span class="badge badge-secondary">
            {% if show == 1 %}
                {{fieldValue.text|default("-")}}  
            {% elseif show == 2 %}
                <div data-toggle="tooltip" data-placement="top" title="{{ fieldValue.text }}">
                {{fieldValue.icon|fontAwesome({class:"fa-fw"})
                                |default(fieldValue.icon|imagify)|default("") | raw}}
                </div>
            {% else %}
                {{fieldValue.text|default("-")}} | 
                {{fieldValue.icon|fontAwesome({class:"fa-fw"})
                                |default(fieldValue.icon|imagify)|default("") | raw}}
            {% endif %}
        </span>
    {% endif %}

{% endif %}
