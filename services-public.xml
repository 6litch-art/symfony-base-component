<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>

        <defaults public="true" />

        <service id="base.service" alias="Base\Service\BaseService" />
        <service id="base.settings" alias="Base\Service\BaseSettings" />
        
        <service id="Base\Service\LocaleProviderInterface" alias="base.locale_provider"/>
        <service id="base.widget_provider" alias="Base\Service\WidgetProvider" />
        <service id="base.paginator" alias="Base\Service\Paginator" />
        <service id="Base\Service\PaginatorInterface" alias="base.paginator"/>
        <service id="base.locale_provider" alias="Base\Service\LocaleProvider" />
        <service id="Base\Service\WidgetProviderInterface" alias="base.widget_provider"/>
        <service id="base.breadcrumb_grinder" alias="Base\Service\BreadcrumbGrinder" />
        <service id="Base\Service\BreadcrumbGrinderInterface" alias="base.breadcrumb_grinder"/>

        <service id="base.database.naming_strategy" alias="Base\Database\NamingStrategy" />
        <service id="base.database.metadata_factory" alias="Doctrine\Persistence\Mapping\ClassMetadataFactory" />
        <service id="base.database.metadata_manipulator" alias="Base\Database\Factory\ClassMetadataManipulator" />
        <service id="base.database.annotation_reader" alias="Base\Annotations\AnnotationReader" />

        <service id="base.twig_loader"  alias="Base\Twig\Loader\FilesystemLoader" />
        <service id="base.twig.app_variable" alias="Base\Twig\AppVariable" />

        <service id="base.form.proxy"   alias="Base\Form\FormProxyInterface" />
        <service id="base.form.factory" alias="Base\Form\FormFactoryInterface" />

    </services>
</container>
